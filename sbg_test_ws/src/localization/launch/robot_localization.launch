<launch>
  <param name ="/use_sim_time" value="true" />
  <arg name="rviz" value="false" />
  <!--node type="rviz" name="rviz" pkg="rviz" args="-d $(find fastslam2)/rviz/slam.rviz" if="$(arg rviz)" /-->

  <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_odom" args="0 0 0 0 0 0 1.0 map odom" />
  <node pkg="tf2_ros" type="static_transform_publisher" name="odom_to_rear_axle" args="0 0 0 0 0 0 1.0 odom rear_axle" />

  <!--node pkg="tf2_ros" type="static_transform_publisher" name="static_tf_bc0" args="0 0 0.35 0 0 0 1.0 base_footprint base_link" />
  <node pkg="tf2_ros" type="static_transform_publisher" name="static_tf_bc4" args="0 0 0.4 0 0 0 1.0 base_link gps_base_link" />
  <node pkg="tf2_ros" type="static_transform_publisher" name="static_tf_bc5" args="0 0 0 0 0 3.14 base_link imu_base_link" /-->


  <node pkg="tf2_ros" type="static_transform_publisher" name="rear_axle_to_imu_base_link" args="1 0.05 0.35 0 0 3.14 rear_axle imu_base_link" />


  <rosparam file="$(find localization)/config/robot_localization.yaml" command="load"/>


  <node name="ukf_odom" type="ukf_localization_node" pkg="robot_localization">
    <remap from="odometry/filtered" to="/odometry/filtered" />
  </node>

  <!-- <node name="ukf_map" type="ukf_localization_node" pkg="robot_localization">
    <remap from="odometry/filtered" to="/slam/odom_final"/>
  </node> -->


</launch>
